name: Linters
on:
  push:
    branches:
      - main

jobs:
  lint:
    name: Linters
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Install Node.js and Python
        uses: actions/setup-node@v2
        with:
          node-version: '14'
      - name: Install ESLint
        run: npm install eslint

      - name: Run ESLint
        run: npx eslint .

      - name: Install Pylint
        run: pip install pylint

      - name: Run Pylint
        run: pylint .
